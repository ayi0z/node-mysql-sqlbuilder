{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "allowJs": true,
        "noLib": false,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "strict": true,
        "outDir": "dist/",
        "baseUrl": "."
    },
    "include": [
        "src",
        "src/test"
    ],
    "exclude": [
        "node_modules",
        "gulpfile.js"
    ]
}